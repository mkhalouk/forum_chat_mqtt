<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Home</title>
    <link rel="stylesheet" href="/assets/subscriber/subscriber.css" />
    <link rel="stylesheet" href="/assets/stylesheets/navbar.css" />
    <script src="https://unpkg.com/mqtt/dist/mqtt.min.js"></script>
  </head>
  <body>
    <section>
      <nav>
        <ul class="menuItems">
          <li><a href="/" data-item="Home">Home</a></li>
          <li>
            <a href="/publisher" data-item="Envoyer un message"
              >Envoyer un message</a
            >
          </li>
          <li>
            <a href="/subscriber" data-item="Voir les messages"
              >Voir les messages</a
            >
          </li>
          <li id="listLogin">
            <a href="/login" data-item="Connexion">Connexion</a>
          </li>
          <li id="listLogout">
            <a href="/logout" data-item="Déconnexion">Déconnexion</a>
          </li>
          <li id="listSignup">
            <a href="/signup" data-item="Inscription">Inscription</a>
          </li>
        </ul>
      </nav>
    </section>

    <h1 id="greeting">Forum Chat</h1>
    <h2>General</h2>
    <div class="line"></div>
    <ul class="wrapper">
      <li class="form-row">
        <label for="topic"></label>
        <input type="text" id="topic" value="generalTopic" hidden="true" />
      </li>
      <li class="form-row">
        <label for="messageSub">Chat</label>
        <textarea
          id="messageSub"
          name="messageSub"
          rows="10"
          readonly
        ></textarea>
      </li>
    </ul>
    <form method="post" action="/publish" id="publishForm">
      <ul class="wrapper">
        <li class="form-row">
          <label for="topic"></label>
          <input type="text" id="topic" value="generalTopic" hidden="true" />
        </li>
        <li class="form-row">
          <label for="messagePub">Write your message</label>
          <input type="text" id="messagePub" />
        </li>
        <li class="form-row">
          <button type="submit" class="publish">Send</button>
        </li>
      </ul>
    </form>
    <script src="/assets/home/home.js"></script>
    <script>
      window.addEventListener("load", async (event) => {
        const sessionData = await getSessionData();
        if(sessionData.user) {
          document.getElementById("greeting").textContent += ' - ' + 'Bonjour ' + sessionData.user.username;
          document.getElementById("listLogin").remove();
          document.getElementById("listSignup").remove();
        } else {
          document.getElementById("listLogout").hidden = true;
        }
      });

      async function getSessionData() {
        const response = await fetch("/getsessiondata");
        const data = await response.json();
        return data;
      }
    </script>
  </body>
</html>
